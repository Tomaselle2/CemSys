@model CemSys.Models.ViewModel.VMContratoConcesion
@{
    ViewData["Title"] = "Registrar contrato concesión";
}

<div class="container mt-4">
    <h4>Registrar contrato concesión</h4>
    <hr />

    <form asp-action="Registrar" method="post" enctype="multipart/form-data">
        <div class="row">
            <div class="col-md-6">
                <h6>Datos concesión</h6>
                <div class="form-group">
                    <label>Cantidad de años</label>
                    <input asp-for="CantidadAnios" class="form-control" />
                </div>
                <div class="form-group">
                    <label>Vencimiento</label>
                    <input asp-for="Vencimiento" type="date" class="form-control" />
                </div>
                <div class="form-group">
                    <label>Precio</label>
                    <input asp-for="Precio" class="form-control" />
                </div>
                <div class="form-group">
                    <label>Modalidad de pago</label>
                    <select asp-for="ModalidadPago" class="form-control">
                        <option>Contado</option>
                        <option>Cuotas</option>
                    </select>
                </div>
                <button type="submit" class="btn btn-primary mt-2">Generar contrato</button>
            </div>

            <div class="col-md-6">
                <h6>Datos del titular</h6>
                <div class="form-group">
                    <label>Nombre</label>
                    <input asp-for="NombreCompleto" class="form-control" />
                </div>
                <div class="form-group">
                    <label>Domicilio</label>
                    <input asp-for="Ubicacion" class="form-control" />
                </div>
                <div class="form-group">
                    <label>DNI</label>
                    <div class="input-group">
                        <input asp-for="Dni" class="form-control" />
                        <div class="input-group-append">
                            <button class="btn btn-secondary" type="submit" formaction="/Titulares/Buscar">Buscar</button>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <label>Correo</label>
                    <input asp-for="Correo" class="form-control" />
                </div>
                <div class="form-group">
                    <label>Celular</label>
                    <input asp-for="Celular" class="form-control" />
                </div>
            </div>
        </div>

        <hr />

        <div class="row mt-3">
            <div class="col-md-6">
                <label>Documento generado</label>
                <textarea readonly class="form-control" rows="6"></textarea>
                <button type="button" class="btn btn-info mt-2">Imprimir</button>
            </div>

            <div class="col-md-6">
                <label>Cargar documento</label>
                <input type="file" name="DocumentoAdjunto" class="form-control" />
                <button type="submit" class="btn btn-success mt-2">Guardar</button>
            </div>
        </div>
    </form>
</div>
