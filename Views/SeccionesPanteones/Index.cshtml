@using CemSys.Models.ViewModel
@model ABMRepositoryVM<SeccionesPanteone>

<div class="container mt-5">
    <h2 class="mb-4 text-center">Gestión de Secciones de panteones</h2>

    <!-- Formulario -->
    <div class="card shadow-sm mb-4">
        <div class="nueva-seccion">
            Nueva Sección
        </div>
        <div class="card-body">
            <form asp-action="Registrar" method="post" >
                <div class="row g-3">
                    <div class="col-md-6">
                        <label for="nombre" class="form-label">Nombre</label>
                        <input type="hidden" name="id" value="@Model.Modelo?.IdSeccionPanteones" />
                        <input class="form-control" type="text" name="nombre" required maxlength="50" id="nombre" />
                    </div>
                    <div class="col-md-6">
                        <label for="nroLotes" class="form-label">Cantidad de lotes</label>
                        <input class="form-control" type="number" name="nroLotes" required id="nroLotes" min="1" />
                    </div>
                    <div class="col-md-12 d-flex justify-content-end">
                        <input class="btn-custom" type="submit" value="Registrar" />
                    </div>
                </div>

            </form>
        </div>
    </div>

    <!-- Tabla -->
    @if (Model.Lista.Count == 0)
    {
        <p>No hay datos para mostrar</p>
    }
    else
    {
        <div class="card shadow-sm">
            <div class="card-header bg-secondary text-white">
                Secciones Registradas
            </div>
            <div class="card-body p-0">
                <table class="table table-striped mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>Nombre</th>
                            <th>Nro de lotes</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var opc in Model.Lista)
                        {
                            if (opc.Visibilidad != false)
                            {
                                <tr>
                                    <td>@opc.Nombre.ToUpper()</td>
                                    <td>@opc.Panteones</td>
                                    <td>
                                        <form asp-action="Administrar" method="get" style="display: inline-block;">
                                            <input type="hidden" name="id" value="@opc.IdSeccionPanteones" />
                                            <button type="submit" class="btn-modificar btn-sm" title="Administrar">
                                                <i class="bi bi-pencil"></i>
                                            </button>
                                        </form>
                                        <form asp-action="Eliminar" method="post" style="display: inline-block;" id="formularioEliminar_@opc.IdSeccionPanteones">
                                            <input type="hidden" name="id" value="@opc.IdSeccionPanteones" />
                                            <button type="button" class="btn-eliminar btn-sm" title="Eliminar" onclick="confirmarEliminacion(@opc.IdSeccionPanteones)">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        </form>
                                    </td>

                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }

    <!-- Mensaje de éxito -->
    <div class="alert alert-success mt-3" role="alert">
        @ViewData["MensajeEmitir"]
    </div>
</div>

@* Modal de confirmación *@
<div class="modal" tabindex="-1" id="modalConfirmacion" style="display:none">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">¡Advertencia!</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>¿Desea eliminar esta sección?</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal" onclick="cerrarModal()">Cancelar</button>
                <button type="button" class="btn btn-danger" onclick="enviarFormulario()">Eliminar</button>
            </div>
        </div>
    </div>
</div>

<script>
    const inputNombre = document.getElementById('nombre');
    // Convertimos la lista de C# a un formato que JavaScript pueda entender
    let listaSeccionPanteon = @Html.Raw(Json.Serialize(Model.Lista));

    inputNombre.addEventListener('blur', (e) => {
        const nombreIngresado = inputNombre.value.trim().toLowerCase();

        // Verificamos si el nombre ya existe
        const existeNombre = listaSeccionPanteon.some(seccion =>
            seccion.nombre.toLowerCase() === nombreIngresado &&
            seccion.visibilidad !== false
        );

        if(existeNombre) {
            alert('¡Esta sección ya existe! Por favor ingrese un nombre diferente.');
            inputNombre.value = "";
        }
    });
</script>
<script>
    //logica de modal
    function confirmarEliminacion(idSeccion) {
        const form = document.getElementById(`formularioEliminar_${idSeccion}`);

        if (form) {
            const modal = new bootstrap.Modal(document.getElementById("modalConfirmacion"));

            // Configurar el modal para este formulario específico
            document.getElementById("modalConfirmacion").dataset.seccionId = idSeccion;
            modal.show();
        }
    }

    function cerrarModal() {
        document.getElementById("modalConfirmacion").style.display = "none";
    }

    function enviarFormulario() {
        const idSeccion = document.getElementById("modalConfirmacion").dataset.seccionId;
        const form = document.getElementById(`formularioEliminar_${idSeccion}`);

        if (form.checkValidity()) {
            form.submit(); // Sólo se envía si el formulario es válido
        } else {
            form.reportValidity(); // Muestra los mensajes de error del navegador
            cerrarModal(); // Opcional: cerrá el modal si querés forzar al usuario a revisar
        }
    }
    //fin logica modal
</script>